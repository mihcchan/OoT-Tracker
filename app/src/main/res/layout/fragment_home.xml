<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ToggleButton
        android:id="@+id/slingshotButton"
        android:layout_width="@dimen/item_size"
        android:layout_height="@dimen/item_size"
        android:layout_margin="8dp"
        android:background="@drawable/selector_slingshot"
        android:textOff=""
        android:textOn=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/bombButton"
        android:layout_width="@dimen/item_size"
        android:layout_height="@dimen/item_size"
        android:background="@null"
        android:src="@drawable/oot3d_bomb_icon_bw"
        app:layout_constraintBottom_toBottomOf="@+id/slingshotButton"
        app:layout_constraintStart_toEndOf="@+id/slingshotButton"
        app:layout_constraintTop_toTopOf="@+id/slingshotButton" />

    <ImageButton
        android:id="@+id/bombchuButton"
        android:layout_width="@dimen/item_size"
        android:layout_height="@dimen/item_size"
        android:background="@null"
        android:src="@drawable/oot3d_bombchu_icon_bw"
        app:layout_constraintBottom_toBottomOf="@+id/bombButton"
        app:layout_constraintStart_toEndOf="@+id/bombButton"
        app:layout_constraintTop_toTopOf="@+id/bombButton" />

    <ImageButton
        android:id="@+id/hookshotButton"
        android:layout_width="@dimen/item_size"
        android:layout_height="@dimen/item_size"
        android:background="@null"
        android:src="@drawable/oot3d_hookshot_icon_bw"
        app:layout_constraintBottom_toBottomOf="@+id/bombchuButton"
        app:layout_constraintStart_toEndOf="@+id/bombchuButton"
        app:layout_constraintTop_toTopOf="@+id/bombchuButton" />

    <ImageButton
        android:id="@+id/strengthButton"
        android:layout_width="@dimen/item_size"
        android:layout_height="@dimen/item_size"
        android:background="@null"
        android:visibility="invisible"
        android:src="@drawable/oot3d_goron_bracelet_icon_bw"
        app:layout_constraintBottom_toBottomOf="@+id/bombButton"
        app:layout_constraintStart_toEndOf="@+id/bombButton"
        app:layout_constraintTop_toTopOf="@+id/bombButton" />

